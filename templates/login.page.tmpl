{{template "base" . }}
    
    {{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Login</h1>

                <form method="post" action="/user/login" novalidate>
                    
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="mt-5">
                        <label for="email">Email</label>
                        {{with .Form.Errors.Get "email"}}
                            <label class="text-danger">{{.}}</label>

                        {{end}}
                        <input type="text" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}"
                         name="email" id="email" required autocomplete="off" value="">
                    </div>
                    <div class="mt-5">
                        <label for="password">Password</label>
                        {{with .Form.Errors.Get "password"}}
                            <label class="text-danger">{{.}}</label>

                        {{end}}
                        <input type="password" class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{end}}"
                         name="password" id="password" required autocomplete="off" value="">
                    </div>

                    <hr>

                    <input type="submit" class="btn btn-primary" value="Submit">
                </form>



            </div>
        </div>
    </div>
    {{end}}