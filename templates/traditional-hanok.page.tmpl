{{template "base" .}}

    {{define "content"}}
        <div class="container">
            <div class="row">
                <div class="col" >
                    <img src="/static/images/Namsangol.jpg" alt="Traditional house in Namsangol" class="img-fluid img-thumbnail mx-auto d-block room-image">
                </div>
                
            </div>
            
            <div class="row">
                <div class="col">
                    <h1 class="text-center mt-4">Traditional Hanok</h1>
                    <p>Your traditional oriental home for holidays. Rest in korean houses, find your peace and enjoy rich of flavors of local cuisine.</p>
